<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/pickupItem_dateText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:text="Sun, 12/3 7:00 PM"
        android:textColor="#202020"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/matches_bg"
        app:layout_constraintEnd_toStartOf="@+id/pickupItem_acceptBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/pickupItem_locationIcon"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/location_icon"
        android:backgroundTint="#202020"
        app:layout_constraintStart_toStartOf="@+id/pickupItem_teamNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/pickupItem_teamNameTxt" />

    <TextView
        android:id="@+id/pickupItem_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ames, Iowa"
        android:textColor="#202020"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/pickupItem_locationIcon"
        app:layout_constraintTop_toBottomOf="@+id/pickupItem_teamNameTxt" />

    <TextView
        android:id="@+id/pickupItem_teamNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Brighton"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pickupItem_acceptBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:text="Accept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pickupItem_denyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#DC0F00"
        android:text="Deny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickupItem_acceptBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>